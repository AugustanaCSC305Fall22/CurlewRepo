<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane prefHeight="310.0" prefWidth="304.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="curlew.gameboardeditor.ui.SecondaryController">
   <top>
      <HBox alignment="TOP_CENTER" BorderPane.alignment="TOP_RIGHT">
         <children>
            <Label fx:id="titleLabel" alignment="TOP_RIGHT" text="Template For Ideas">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
               <graphic>
                  <Button fx:id="backButton" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#clickedBack" prefHeight="38.0" prefWidth="135.0" text="Back">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </Button>
               </graphic>
            </Label>
         </children>
      </HBox>
   </top>
   <left>
      <ScrollBar fx:id="mapScrollBar" orientation="VERTICAL" prefHeight="29.0" prefWidth="56.0" BorderPane.alignment="CENTER" />
   </left>
   <center>
      <VBox alignment="TOP_CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="mapNameLabel" alignment="TOP_CENTER" text="Name Of Map" />
            <ImageView fx:id="previewImageView" fitHeight="215.0" fitWidth="244.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </VBox>
   </center>
   <bottom>
      <Button fx:id="nextButton" mnemonicParsing="false" onAction="#clickNext" text="Next " BorderPane.alignment="BOTTOM_RIGHT">
         <font>
            <Font size="15.0" />
         </font>
      </Button>
   </bottom>
</BorderPane>
