<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>




<BorderPane prefHeight="325.0" prefWidth="404.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="curlew.gameboardeditor.ThirdController">
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#clickedBack" prefHeight="25.0" prefWidth="189.0" text="Back" />
            <Label alignment="CENTER_RIGHT" prefHeight="35.0" prefWidth="221.0" text="Terrain Editor">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <bottom>
      <VBox alignment="BOTTOM_CENTER" prefHeight="49.0" prefWidth="404.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Length">
               <padding>
                  <Insets bottom="-5.0" />
               </padding>
            </Label>
            <Slider fx:id="lengthSlider" blockIncrement="2.0" majorTickUnit="2.0" max="64.0" min="10.0" minorTickCount="0" prefHeight="45.0" prefWidth="409.0" showTickLabels="true" showTickMarks="true" snapToTicks="true">
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding></Slider>
            <Label text="Width">
               <padding>
                  <Insets bottom="-5.0" />
               </padding>
            </Label>
            <Slider fx:id="widthSlider" blockIncrement="2.0" majorTickUnit="2.0" max="64.0" min="10.0" minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true">
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding></Slider>
            <Button fx:id="saveAsButton" alignment="BOTTOM_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" onAction="#saveAsButtonHandler" text="Save As" />
         </children>
      </VBox>
   </bottom>
   <left>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <ScrollPane prefHeight="200.0" prefWidth="200.0">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="107.0" />
              </content>
               <contextMenu>
                  <ContextMenu>
                    <items>
                      <MenuItem fx:id="DigFeatureButton" mnemonicParsing="false" text="DigFeature" />
                        <MenuItem mnemonicParsing="false" text="Unspecified Action" />
                    </items>
                  </ContextMenu>
               </contextMenu>
            </ScrollPane>
         </children>
      </VBox>
   </left>
   <center>
      <HBox prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView fx:id="ImageViewEditor" fitHeight="200.0" fitWidth="292.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
   </center>
</BorderPane>
